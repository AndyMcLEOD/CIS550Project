<!-- views/categories.ejs -->
<!doctype html>
<html>
<head>
  <title>Minion Movies</title>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
  <link rel="stylesheet" href="../../stylesheets/bootstrap.css">
  <link rel="stylesheet" href="../../stylesheets/style.css">
  <script src="../../js/bootstrap.min.js"></script>
  <script src="../../js/jquery.js"></script>
  <script src="../../js/bootstrap.js"></script>
  <style>
    body    { padding-top: 50px; }

    TABLE {
        margin: 50px;
        margin-left: 50px;
        text-align: center;
    }

    .well {
        margin-bottom: 50px;
    }
  </style>
</head>
<body>
    <nav class="navbar navbar-default">

      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <a class="navbar-brand" href="/">Minion Movies</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li><a href="/ "> Movies <span class="sr-only">(current)</span></a></li>
            <li><a href="/people"> People </a></li>
            <li><a href="/reviews"> Reviews </a></li>
            <li class="active"><a href="/categories"> Categories </a></li>
            <li><a href="/trailers"> Trailers </a></li>
          </ul>

          <form action="/result" method="post" class="navbar-form navbar-left" role="search">
            <div class="form-group">
              <input type="text" class="form-control" size="31" placeholder="Search movies or people here" name="searchContent">
            </div>
            <select name="searchType" size="1">
                    <option value="title" selected> title </option>
                    <option value="actors"> actors </option>
                    <option value="country"> country </option>
                    <option value="tag"> tag </option>
                    <option value="year"> year </option>
                    <option value="genres"> genres </option>
            </select>
            <button type="submit" class="btn btn-default">Search</button>
          </form>
          <% if(!isLogin){ %>
            <ul class="nav navbar-nav navbar-right">
              <li class="dropdown">
               <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> Log in <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><a href="/createProductCategory"><span class="fa fa-user"></span> Local Login </a></li>
                  <li role="separator" class="divider"></li>
                  <li><a href="/viewProductCategory"><span class="fa fa-user"></span> Local Signup</a></li>
                  <li role="separator" class="divider"></li>
                  <li><a href="/viewProductCategory"><span class="fa fa-facebook"></span> Fackbook Login</a></li>
                </ul>
              </li>
            </ul>
          <% }else{ } %>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>
    <!-- Reviews: every div shows one review tupleã€‚ -->
    <div class="container">
      <div class="well">
        <BR><h2><i><strong><center> Genres <center></strong></i></h2></BR>
        <TABLE align = "center">
          <% for(var row = 0, colNum = 10; row < genres_list.length/colNum; row++) {%>
          <TR height="30">
            <% for(var col = 0; col < colNum && row*colNum + col < genres_list.length; col++) {%>
            <TD width="100">
            <% var genreLink = "/category/genres/" + genres_list[row*colNum + col]["GENRE"] %>
            <a href=<%= genreLink %>> <%= genres_list[row*colNum + col]["GENRE"] %>  </a>
            </TD>
          <%} %>
          </TR>
        <%} %>
      </TABLE>
      </div>
      <div class="well">
        <BR><h2><i><strong><center> Years <center></strong></i></h2></BR>
        <TABLE align = "center">
          <% for(var row = 0; row < 3; row++) {%>
          <TR height = "30">
            <% for(var col = 0; col < 10; col++) {%>
            <TD width = "100">
            <% var yearLink = "/category/years/" + years_list[col + row * 10] %>
            <a href=<%= yearLink %>> <%= years_list[col + row * 10] %></a>
            </TD>
          <%} %>
          </TR>
        <%} %>
      </TABLE>
      </div>
      <div class="well">
        <BR><h2><i><strong><center> Tags <center></strong></i></h2></BR>
        <TABLE align = "center">
          <% for(var row = 0; row < 3; row++) {%>
          <TR height = "50">
            <% for(var col = 0; col < 10; col++) {%>
            <TD width = "100">
            <% var tagLink = "/category/tag/" + tags_list[col + row * 10] %>
            <a href=<%= tagLink %>> <%= tags_list[col + row * 10] %></a>
            </TD>
          <%} %>
          </TR>
        <%} %>
      </TABLE>
      </div>
    </div>
</body>
</html>