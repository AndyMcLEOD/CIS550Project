<!-- views/index.ejs -->
<!doctype html>
<html>
<head>
  <title>Minion Movies</title>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css"><!-- load fontawesome -->
  <link rel="stylesheet" href="../../stylesheets/bootstrap.css">
  <link rel="stylesheet" href="../../stylesheets/style.css">
  <style>
    body    { padding-top: 50px; }

    .well {
        padding-bottom: 50px;
    }
  </style>
</head>
<body>
    <nav class="navbar navbar-default">

      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <a class="navbar-brand" href="/">Minion Movies</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li class="active"><a href="/ "> Movies <span class="sr-only">(current)</span></a></li>
            <li><a href="/artists"> Artists </a></li>
            <li><a href="/reviews"> Reviews </a></li>
            <li><a href="/categories"> Categories </a></li>
            <li><a href="/trailers"> Trailers </a></li>
          </ul>

          <form method="post" class="navbar-form navbar-left" role="search">
            <div class="form-group">
              <input type="text" class="form-control" size="31" placeholder="Search movies or people here">
            </div>
            <select name="search" size="1">
                    <option value="title" selected> title </option>
                    <option value="actors"> actors </option>
                    <option value="reviews"> reviews </option>
                    <option value="tags"> tags </option>
                    <option value="year"> year </option>
                    <option value="genres"> genres </option>
            </select>
            <button type="submit" class="btn btn-default">Search</button>
          </form>

          
          <% if(!isLogin){ %>
            <ul class="nav navbar-nav navbar-right">
              <li class="dropdown">
               <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> Log in <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><a href="/login"><span class="fa fa-user"></span> Local Login </a></li>
                  <li role="separator" class="divider"></li>
                  <li><a href="/login"><span class="fa fa-user"></span> Local Signup</a></li>
                  <li role="separator" class="divider"></li>
                  <li><a href="/login"><span class="fa fa-facebook"></span> Fackbook Login</a></li>
                </ul>
              </li>
            </ul>
          <% }else{ } %>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>
    <!-- Reviews: every div shows one review tupleã€‚ -->
    <div class="container">
      <div class="well">
        <h1><i class="fa fa-circle"></i> <%= artist["NAME"] %></h1>
        <span class="image">
          <img class="poster" src = <%= artist["PROFILE"] %> alt = <%= artist["NAME"] %>/>
          <p> <strong>Date of Birth: </strong> <%= artist["DAY_OF_BIRTH"] %> </p>
          <p> <strong>Date of Death: </strong> <%= artist["DAY_OF_DEATH"] %> </p>
          <p> <strong>A.K.A: </strong> <%= aliases %> </p>
          <p> <strong>Biogaphy: </strong> <%= artist["BIOGRAPHY"] %> </p>

          <% var tmdbLink = "https://www.themoviedb.org/person/" + artist["ID"] %>
          <p><a href=<%= tmdbLink %>> <strong> More details... </strong> </a></p> 
        </span>
      </div>

      <div class="well">
        <button class="btn btn-danger bt-xs"><h3><span class="fa fa-file-video-o"></span> Acting: </h3></button>
        <p>
          <% for(var i = 0; i < actings.length; i++){ %>
            <% var id = actings[i]["MOVIE_ID"]%>
            <% var link = "/movies/" + actings[i]["MOVIE_ID"] %>
            <span class="image">
              <a href = <%= link %>>
                <img src = <%= actings[i]["POSTER"] %> alt = <%= actings[i]["TITLE"] %> /></a>
              <a href = <%= link %> class="link"><%= actings[i]["TITLE"] %>(as&nbsp;<%= actings[i]["CHARACTER"] %>)</a>
            </span>
          <% } %> 
        </p>
        
      </div>
      <div class="well">
        <button class="btn btn-danger bt-xs"><h3><span class="fa fa-file-video-o"></span> Direting: </h3></button>

        
      </div>

      <div class="well">
        <button class="btn btn-info bt-xs"><h3><span class="fa fa-comments"></span> Artists cooperated:  </h3></button>
        
      </div>
    </div>
<script src="../../js/bootstrap.min.js"></script>
<script src="../../js/jquery.js"></script>
<script src="../../js/bootstrap.js"></script>     
</body>
</html>