<!-- views/index.ejs -->
<!doctype html>
<html>
<head>
  <title>Minion Movies</title>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
  <link rel="stylesheet" href="../../stylesheets/bootstrap.css">
  <link rel="stylesheet" href="../../stylesheets/style.css">
  <script src="../../js/bootstrap.min.js"></script>
  <script src="../../js/jquery.js"></script>
  <script src="../../js/bootstrap.js"></script>
  <style>
    body    { padding-top: 50px; }
  </style>
</head>
<body>
    <nav class="navbar navbar-default">

      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <a class="navbar-brand" href="/">Minion Movies</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li class="active"><a href="/ "> Movies <span class="sr-only">(current)</span></a></li>
            <li><a href="/people"> People </a></li>
            <li><a href="/reviews"> Reviews </a></li>
            <li><a href="/classification"> Classification </a></li>
            <li><a href="/trailers"> Trailers </a></li>
          </ul>

          <form method="post" class="navbar-form navbar-left" role="search">
            <div class="form-group">
              <input type="text" class="form-control" placeholder="Search movies or people here">
            </div>
            <select name="search" size="1">
                    <option value="title" selected> title </option>
                    <option value="actors"> actors </option>
                    <option value="reviews"> reviews </option>
                    <option value="tags"> tags </option>
                    <option value="year"> year </option>
                    <option value="genres"> genres </option>
            </select>
            <button type="submit" class="btn btn-default">Search</button>
          </form>
          <% if(!isLogin){ %>
            <ul class="nav navbar-nav navbar-right">
              <li class="dropdown">
               <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> Log in <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><a href="/createProductCategory"><span class="fa fa-user"></span> Local Login </a></li>
                  <li role="separator" class="divider"></li>
                  <li><a href="/viewProductCategory"><span class="fa fa-user"></span> Local Signup</a></li>
                  <li role="separator" class="divider"></li>
                  <li><a href="/viewProductCategory"><span class="fa fa-facebook"></span> Fackbook Login</a></li>
                </ul>
              </li>
            </ul>
          <% }else{ } %>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>
    <!-- Reviews: every div shows one review tupleã€‚ -->
    <div class="container">
      <div class="well">
        <h1><i class="fa fa-circle"></i> <%= movies["TITLE_YEAR"] %></h1>
        <span class="image">
            <img class="poster" src = <%= movies["POSTER"] %> alt = <%= movies["TITLE_YEAR"] %>/>
            <p><strong>Name: </strong> <%= movies["TITLE_YEAR"] %></p>
            <p><strong>Release date: </strong> <%= movies["RELEASE_DATE"] %></p>
            <p><strong>Runtime: </strong> <%= movies["RUNTIME"] %> mins</p>
            <p><strong>Genres: </strong> <%= genres %></p>
            <p><strong>MPAA: </strong> <%= movies["MPAA"] %></p>
            <p><strong>Popularity: </strong> <%= movies["POPULARITY"] %>(people like)</p>
            <p><strong>Rating: </strong> <%= movies["TMDB_RATING"] %>/10(TMDB) | <%= movies["MOVIELEN_RATING"] %>/5(Movie Len) | <%= movies["RT_CRITIC_RATING"] %>/100(Rotten tomatoes' Critics) | <%= movies["RT_AUDIENCE_RATING"] %>/100(Rotten tomatoes' audience) </p>
            <p><strong>Tag(<%= movies["TAG_NUM"] %>): </strong> <%= tags%> </p>
            <p><strong>Overview: </strong><%= movies["OVERVIEW"] %></p>  
        </span>
      </div>
      <div class="well">
        <button class="btn btn-danger bt-xs"><h3><span class="fa fa-youtube-play"></span> Trailer </h3></button>
      </div>
      <div class="well">
        <button class="btn btn-info bt-xs"><h3><span class="fa fa-comments"></span> Review </h3></button>
      </div>
    </div>
     
</body>
</html>